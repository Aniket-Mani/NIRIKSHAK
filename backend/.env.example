# A strong, random string for JWT token signing.
JWT_SECRET=your_jwt_secret_here

# --- Database Configuration ---
# MongoDB connection string.
# For local development, it might be something like: mongodb://localhost:27017/your_database_name
MONGODB_URI=your_mongodb_connection_string

# --- API Keys ---
# Main API key for Groq services (e.g., for LLM answer generation).
GROQ_API_KEY=your_groq_api_key_here

# Specific Groq API key for OCR tasks (e.g., text extraction from images).
GROQ_API_KEY_OCR=your_groq_api_key_ocr_here

# Specific Groq API key for roll number extraction (e.g., from images).
GROQ_API_KEY_ROLL=your_groq_api_key_roll_here

# --- Server Ports ---
# The port your Node.js application will listen on.
PORT=3000

# --- System Paths (Adjust as per your system and installation) ---
# Path to the Tesseract OCR executable.
# Example for Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
# Example for macOS (Homebrew): /opt/homebrew/bin/tesseract
# Example for Linux: /usr/bin/tesseract
TESSERACT_CMD_PATH=

# Command to execute Python scripts. Use 'python' or 'python3' depending on your setup.
PYTHON_COMMAND=python3